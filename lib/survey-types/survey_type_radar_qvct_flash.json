{
  "survey_type_id": "RADAR_QVCT_FLASH",
  "survey_metadata": {
    "name": "Radar QVCT - Diagnostic Flash",
    "version": "1.0",
    "framework": ["BNQ 9700-800 - 4 sphères"],
    "target_audience": "PME/ETI 50-2000 salariés",
    "decision_makers": ["DRH", "CEO", "COMEX"],
    "estimated_duration_minutes": 8,
    "primary_objective": "Cartographier rapidement les 4 sphères BNQ et identifier les priorités d'action",
    "secondary_objectives": [
      "Préparer une feuille de route QVCT",
      "Objectiver les perceptions terrain"
    ]
  },

  "data_governance": {
    "anonymity_threshold": 15,
    "rgpd_compliant": true,
    "sensitive_data": false,
    "data_retention_days": 730
  },

  "questionnaire_structure": {
    "modules": [
      {
        "id": "MOD_CONSENT",
        "title": "Cadre et Confidentialité",
        "questions": [
          {
            "id": "CONSENT",
            "type": "consent",
            "text": "J'ai compris que mes réponses sont anonymes et agrégées.",
            "required": true
          }
        ]
      },
      {
        "id": "MOD_GESTION",
        "title": "Sphère 1 : Pratiques de Gestion",
        "bnq_reference": "BNQ 9700-800 § 5.5",
        "questions": [
          {"id": "G1", "type": "scale", "scale": "0-10", "text": "Mon manager me donne des feedbacks réguliers et constructifs."},
          {"id": "G2", "type": "scale", "scale": "0-10", "text": "Les objectifs fixés sont clairs et j'ai les ressources pour les atteindre."},
          {"id": "G3", "type": "scale", "scale": "0-10", "text": "Je participe aux décisions qui concernent mon travail quotidien."},
          {"id": "G4", "type": "scale", "scale": "0-10", "text": "La reconnaissance (monétaire ou non) est équitable dans l'entreprise."}
        ]
      },
      {
        "id": "MOD_CONCILIATION",
        "title": "Sphère 2 : Conciliation Vie Pro / Vie Perso",
        "bnq_reference": "BNQ 9700-800 § 5.3",
        "questions": [
          {"id": "C1", "type": "scale", "scale": "0-10", "text": "Mes horaires de travail me permettent de répondre à mes obligations personnelles."},
          {"id": "C2", "type": "scale", "scale": "0-10", "text": "Je parviens à me déconnecter mentalement du travail le soir et le week-end."},
          {"id": "C3", "type": "scale", "scale": "0-10", "text": "L'entreprise fait preuve de flexibilité en cas d'imprévus familiaux."}
        ]
      },
      {
        "id": "MOD_ENVIRONNEMENT",
        "title": "Sphère 3 : Environnement de Travail",
        "bnq_reference": "BNQ 9700-800 § 5.4",
        "questions": [
          {"id": "E1", "type": "scale", "scale": "0-10", "text": "Mon poste de travail (ergonomie, matériel) est adapté à mes besoins."},
          {"id": "E2", "type": "scale", "scale": "0-10", "text": "Le niveau de bruit et d'interruptions me permet de rester concentré."},
          {"id": "E3", "type": "scale", "scale": "0-10", "text": "L'aménagement des locaux favorise à la fois la collaboration et le calme."}
        ]
      },
      {
        "id": "MOD_HABITUDES",
        "title": "Sphère 4 : Habitudes de Vie",
        "bnq_reference": "BNQ 9700-800 § 5.2",
        "questions": [
          {"id": "H1", "type": "scale", "scale": "0-10", "text": "L'entreprise encourage activement une hygiène de vie saine (alimentation, mouvement)."},
          {"id": "H2", "type": "scale", "scale": "0-10", "text": "Je me sens soutenu par l'entreprise pour gérer mon niveau de stress."}
        ]
      },
      {
        "id": "MOD_PRIORITY",
        "title": "Priorisation",
        "questions": [
          {
            "id": "PR1",
            "type": "rank",
            "text": "Classez les 4 sphères par ordre de priorité d'amélioration (1 = plus urgent).",
            "options": ["Pratiques de gestion", "Conciliation vie pro/perso", "Environnement de travail", "Habitudes de vie"]
          },
          {
            "id": "PR2",
            "type": "open_ended",
            "text": "Si vous aviez une baguette magique, quelle est la SEULE action concrète que vous mettriez en place demain ?"
          }
        ]
      }
    ]
  },

  "calculation_engine": {
    "scoring_dimensions": [
      {
        "id": "GESTION",
        "questions": ["G1", "G2", "G3", "G4"],
        "aggregation": "mean",
        "weight": 0.35,
        "alert_threshold": 6
      },
      {
        "id": "CONCILIATION",
        "questions": ["C1", "C2", "C3"],
        "aggregation": "mean",
        "weight": 0.20,
        "alert_threshold": 6
      },
      {
        "id": "ENVIRONNEMENT",
        "questions": ["E1", "E2", "E3"],
        "aggregation": "mean",
        "weight": 0.25,
        "alert_threshold": 6
      },
      {
        "id": "HABITUDES",
        "questions": ["H1", "H2"],
        "aggregation": "mean",
        "weight": 0.20,
        "alert_threshold": 6
      }
    ],

    "critical_indicators": [
      {
        "id": "management_risk",
        "condition": "GESTION < 6",
        "severity": "high",
        "message": "Risque managérial direct sur engagement et performance"
      }
    ]
  },

  "output_engine": {
    "deliverables": [
      {
        "type": "radar_chart",
        "target": "COMEX",
        "title": "Radar QVCT - 4 Sphères BNQ",
        "dimensions": ["GESTION", "CONCILIATION", "ENVIRONNEMENT", "HABITUDES"]
      },
      {
        "type": "priority_matrix",
        "target": "DRH",
        "data": "PR1 aggregated",
        "title": "Matrice de priorisation terrain"
      },
      {
        "type": "action_roadmap",
        "target": "Pilote QVCT",
        "includes": [
          "Top 3 actions prioritaires",
          "Quick wins identifiés",
          "Verbatims clés (PR2)"
        ]
      }
    ],

    "visualizations": [
      {
        "type": "radar_chart",
        "dimensions": 4,
        "threshold_line": 6
      },
      {
        "type": "traffic_light",
        "rules": {
          "green": "> 7",
          "orange": "6-7",
          "red": "< 6"
        }
      }
    ],

    "narrative_templates": {
      "opening": "Sur la base de {response_count} réponses, voici la cartographie QVCT de votre organisation.",
      "insight": "La sphère la plus critique est : {lowest_dimension} (score {lowest_score}/10).",
      "recommendation": "Les collaborateurs priorisent : {top_priority_action}."
    }
  }
}