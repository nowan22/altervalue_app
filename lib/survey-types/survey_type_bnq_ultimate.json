  "questionnaire_structure": {
    "modules": [
      {
        "id": "MOD_CONSENT",
        "title": "Cadre légal et confidentialité",
        "sections": [
          {
            "id": "SEC_INTRO",
            "title": "Page d'accueil",
            "type": "intro",
            "content": {
              "title": "Diagnostic QVCT - Entreprise en Santé",
              "subtitle": "Votre avis compte pour améliorer votre qualité de vie au travail",
              "intro_text": "Bonjour,\n\n{company_name} souhaite mieux comprendre votre vécu au travail pour identifier les actions prioritaires qui amélioreront réellement votre quotidien.\n\nCette enquête est réalisée dans le cadre d'une démarche \u00ab Entreprise en santé \u00bb conforme à la norme BNQ 9700-800.",
              "key_points": [
                { "icon": "clock", "text": "Durée: 8 à 18 minutes selon les modules choisis" },
                { "icon": "lock", "text": "Anonymat garanti: Aucune donnée personnelle n'est collectée" },
                { "icon": "target", "text": "Objectif: Dégager les priorités pour un plan d'action concret" }
              ]
            }
          },
          {
            "id": "SEC_CONSENT",
            "title": "Consentement",
            "questions": [
              {
                "id": "CONSENT",
                "type": "consent",
                "text": "J'ai pris connaissance des conditions de confidentialité et j'accepte de participer à cette enquête anonyme.",
                "required": true,
                "options": [
                  { "value": "yes", "label": "Oui, je consens à participer" },
                  { "value": "no", "label": "Non, je ne souhaite pas participer" }
                ],
                "exit_on_no": true,
                "exit_message": "Merci de votre attention. Vous pouvez fermer cette page."
              }
            ]
          }
        ]
      },
      {
        "id": "MOD_CORE_BNQ",
        "title": "Priorisation BNQ",
        "sections": [
          {
            "id": "SEC_SOCIOPRO",
            "title": "Données socio-professionnelles",
            "description": "Ces informations permettent des analyses par sous-groupes (seuil min. 15 répondants).",
            "questions": [
              {
                "id": "Q1",
                "type": "single_choice",
                "text": "Depuis combien de temps travaillez-vous dans cette entreprise?",
                "required": true,
                "options": [
                  { "value": "<1", "label": "Moins de 1 an" },
                  { "value": "1-3", "label": "1 à 3 ans" },
                  { "value": "3-5", "label": "3 à 5 ans" },
                  { "value": "5-10", "label": "5 à 10 ans" },
                  { "value": ">10", "label": "Plus de 10 ans" }
                ]
              },
              {
                "id": "Q2",
                "type": "single_choice",
                "text": "Quelle est votre catégorie professionnelle?",
                "required": true,
                "options": [
                  { "value": "OUVRIER_EMPLOYE", "label": "Ouvrier / Employé" },
                  { "value": "AGENT_MAITRISE", "label": "Agent de maîtrise / Technicien" },
                  { "value": "CADRE", "label": "Cadre" },
                  { "value": "CADRE_DIRIGEANT", "label": "Cadre dirigeant" }
                ]
              },
              {
                "id": "Q3",
                "type": "single_choice",
                "text": "Quel est votre type de contrat de travail?",
                "required": true,
                "options": [
                  { "value": "CDI_TEMPS_PLEIN", "label": "CDI temps plein" },
                  { "value": "CDI_TEMPS_PARTIEL", "label": "CDI temps partiel" },
                  { "value": "CDD_INTERIM", "label": "CDD / Intérim" },
                  { "value": "ALTERNANCE_STAGE", "label": "Alternance / Stage" }
                ]
              },
              {
                "id": "Q4",
                "type": "dropdown",
                "text": "Dans quel service travaillez-vous principalement?",
                "required": true,
                "customizable": true,
                "default_options": [
                  { "value": "DIRECTION", "label": "Direction / Support" },
                  { "value": "COMMERCIAL", "label": "Commercial / Ventes" },
                  { "value": "PRODUCTION", "label": "Production / Opérations" },
                  { "value": "RD", "label": "Développement / R&D" },
                  { "value": "SUPPORT_CLIENT", "label": "Support client" },
                  { "value": "RH", "label": "Ressources Humaines" },
                  { "value": "FINANCE", "label": "Finance / Administration" },
                  { "value": "MARKETING", "label": "Marketing / Communication" },
                  { "value": "IT", "label": "IT / Systèmes d'information" },
                  { "value": "LOGISTIQUE", "label": "Logistique / Supply Chain" },
                  { "value": "QUALITE", "label": "Qualité / Sécurité" },
                  { "value": "AUTRE", "label": "Autre" }
                ]
              },
              {
                "id": "Q5",
                "type": "single_choice",
                "text": "Quelle est votre situation de télétravail?",
                "required": true,
                "options": [
                  { "value": "0", "label": "Pas de télétravail (100% sur site)" },
                  { "value": "<1", "label": "Télétravail occasionnel (< 1 jour/semaine)" },
                  { "value": "1-3", "label": "Télétravail partiel (1-3 jours/semaine)" },
                  { "value": ">3", "label": "Télétravail majoritaire (> 3 jours/semaine)" },
                  { "value": "100", "label": "Télétravail complet (100% à distance)" }
                ]
              }
            ]
          },
          {
            "id": "SEC_SPHERE1",
            "title": "Habitudes de vie",
            "bnq_reference": "BNQ 9700-800 Clause 4.3.1",
            "sphere_id": 1,
            "intro_text": "Les questions suivantes concernent votre santé, votre équilibre de vie et vos habitudes au quotidien.\n\nÉvaluez chaque affirmation sur une échelle de 0 à 10:\n- 0 = Pas du tout d'accord / Très insatisfait\n- 10 = Tout à fait d'accord / Très satisfait",
            "questions": [
              {
                "id": "Q6",
                "type": "scale",
                "text": "Dans l'ensemble, je dors suffisamment et mon sommeil est réparateur.",
                "scale": "0-10",
                "required": true
              },
              {
                "id": "Q7",
                "type": "scale",
                "text": "Je pratique régulièrement une activité physique ou sportive.",
                "scale": "0-10",
                "required": true
              },
              {
                "id": "Q8",
                "type": "scale",
                "text": "Je mange équilibré et j'ai accès à une alimentation saine au travail.",
                "scale": "0-10",
                "required": true
              },
              {
                "id": "Q9",
                "type": "scale",
                "text": "Mon niveau de stress ou de charge mentale est acceptable et gérable.",
                "scale": "0-10",
                "required": true,
                "valence": "positive"
              },
              {
                "id": "Q10",
                "type": "scale",
                "text": "Je n'ai pas besoin de substances (alcool, tabac, etc.) pour gérer mon stress ou ma fatigue.",
                "scale": "0-10",
                "required": false,
                "sensitive": true,
                "allow_skip": true,
                "skip_label": "Préfère ne pas répondre"
              },
              {
                "id": "Q11",
                "type": "scale",
                "text": "Mon entreprise propose des actions concrètes pour soutenir ma santé (sport, nutrition, prévention, etc.).",
                "scale": "0-10",
                "required": true
              },
              {
                "id": "Q12",
                "type": "single_choice",
                "text": "Parmi les aspects suivants, lequel devrait être LA PRIORITÉ pour améliorer les habitudes de vie dans votre entreprise?",
                "required": true,
                "is_priority_question": true,
                "options": [
                  { "value": "ACTIVITE_PHYSIQUE", "label": "Faciliter l'activité physique (salles, équipements, horaires)" },
                  { "value": "ALIMENTATION", "label": "Améliorer l'offre alimentaire (cantine, pauses, équilibre)" },
                  { "value": "SOMMEIL", "label": "Sensibiliser sur le sommeil et la récupération" },
                  { "value": "STRESS", "label": "Proposer des programmes de gestion du stress" },
                  { "value": "SEVRAGE", "label": "Accompagner le sevrage tabagique / alcool" },
                  { "value": "SANTE", "label": "Renforcer les services de santé (médecine du travail, prévention)" },
                  { "value": "OTHER", "label": "Autre (précisez)" }
                ],
                "allow_other": true
              }
            ]
          },
          {
            "id": "SEC_SPHERE2",
            "title": "Conciliation vie professionnelle / vie personnelle",
            "bnq_reference": "BNQ 9700-800 Clause 4.3.2",
            "sphere_id": 2,
            "intro_text": "Les questions suivantes portent sur l'équilibre entre votre travail et votre vie personnelle.\n\nÉvaluez chaque affirmation sur une échelle de 0 à 10:\n- 0 = Pas du tout d'accord\n- 10 = Tout à fait d'accord",
            "questions": [
              {
                "id": "Q13",
                "type": "scale",
                "text": "Je parviens à concilier ma vie professionnelle et ma vie personnelle de manière satisfaisante.",
                "scale": "0-10",
                "required": true
              },
              {
                "id": "Q14",
                "type": "scale",
                "text": "Mes horaires de travail sont compatibles avec ma vie personnelle (enfants, loisirs, famille).",
                "scale": "0-10",
                "required": true
              },
              {
                "id": "Q15",
                "type": "scale",
                "text": "Ma charge de travail me permet de déconnecter en dehors des horaires de travail.",
                "scale": "0-10",
                "required": true
              },
              {
                "id": "Q16",
                "type": "scale",
                "text": "Je peux réellement déconnecter (emails, appels) le soir et le week-end sans conséquences négatives.",
                "scale": "0-10",
                "required": true
              },
              {
                "id": "Q17",
                "type": "scale",
                "text": "Mon entreprise propose des solutions de flexibilité (télétravail, horaires aménagés, temps partiel).",
                "scale": "0-10",
                "required": true
              },
              {
                "id": "Q18",
                "type": "scale",
                "text": "Je me sens soutenu(e) par mon manager en cas de besoin personnel ou familial.",
                "scale": "0-10",
                "required": true
              },
              {
                "id": "Q19",
                "type": "single_choice",
                "text": "Parmi les aspects suivants, lequel devrait être LA PRIORITÉ pour améliorer la conciliation vie pro/perso?",
                "required": true,
                "is_priority_question": true,
                "options": [
                  { "value": "CHARGE_TRAVAIL", "label": "Réduire la charge de travail" },
                  { "value": "DECONNEXION", "label": "Renforcer le droit à la déconnexion" },
                  { "value": "FLEXIBILITE", "label": "Augmenter la flexibilité des horaires" },
                  { "value": "TELETRAVAIL", "label": "Développer le télétravail" },
                  { "value": "MANAGER", "label": "Former les managers à la conciliation" },
                  { "value": "SERVICES", "label": "Proposer des services (garde d'enfants, conciergerie)" },
                  { "value": "OTHER", "label": "Autre (précisez)" }
                ],
                "allow_other": true
              }
            ]
          },
          {
            "id": "SEC_SPHERE3",
            "title": "Environnement de travail",
            "bnq_reference": "BNQ 9700-800 Clause 4.3.3",
            "sphere_id": 3,
            "intro_text": "Les questions suivantes concernent votre environnement de travail physique et organisationnel.\n\nÉvaluez chaque affirmation sur une échelle de 0 à 10.",
            "questions": [
              {
                "id": "Q20",
                "type": "scale",
                "text": "Mon poste de travail est adapté à mes besoins (ergonomie, équipement).",
                "scale": "0-10",
                "required": true
              },
              {
                "id": "Q21",
                "type": "scale",
                "text": "L'ambiance sonore de mon environnement de travail est acceptable.",
                "scale": "0-10",
                "required": true
              },
              {
                "id": "Q22",
                "type": "scale",
                "text": "La température et la qualité de l'air sont satisfaisantes sur mon lieu de travail.",
                "scale": "0-10",
                "required": true
              },
              {
                "id": "Q23",
                "type": "scale",
                "text": "Je dispose d'espaces de repos ou de détente adaptés.",
                "scale": "0-10",
                "required": true
              },
              {
                "id": "Q24",
                "type": "scale",
                "text": "Les règles de sécurité sont respectées et je me sens en sécurité au travail.",
                "scale": "0-10",
                "required": true
              },
              {
                "id": "Q25",
                "type": "scale",
                "text": "Les outils et systèmes informatiques mis à ma disposition sont performants.",
                "scale": "0-10",
                "required": true
              },
              {
                "id": "Q26",
                "type": "scale",
                "text": "L'organisation du travail (processus, réunions) est efficace.",
                "scale": "0-10",
                "required": true
              },
              {
                "id": "Q27",
                "type": "scale",
                "text": "Je dispose des ressources nécessaires pour bien faire mon travail.",
                "scale": "0-10",
                "required": true
              },
              {
                "id": "Q28",
                "type": "single_choice",
                "text": "Parmi les aspects suivants, lequel devrait être LA PRIORITÉ pour améliorer l'environnement de travail?",
                "required": true,
                "is_priority_question": true,
                "options": [
                  { "value": "ERGONOMIE", "label": "Améliorer l'ergonomie des postes" },
                  { "value": "BRUIT", "label": "Réduire les nuisances sonores" },
                  { "value": "CONFORT", "label": "Améliorer le confort thermique et qualité de l'air" },
                  { "value": "ESPACES", "label": "Créer/améliorer les espaces de détente" },
                  { "value": "SECURITE", "label": "Renforcer la sécurité" },
                  { "value": "OUTILS", "label": "Moderniser les outils informatiques" },
                  { "value": "ORGANISATION", "label": "Optimiser l'organisation du travail" },
                  { "value": "OTHER", "label": "Autre (précisez)" }
                ],
                "allow_other": true
              }
            ]
          },
          {
            "id": "SEC_SPHERE4",
            "title": "Pratiques de gestion",
            "bnq_reference": "BNQ 9700-800 Clause 4.3.4",
            "sphere_id": 4,
            "intro_text": "Les questions suivantes concernent les pratiques de management et de gestion dans votre entreprise.\n\nÉvaluez chaque affirmation sur une échelle de 0 à 10.",
            "questions": [
              {
                "id": "Q29",
                "type": "scale",
                "text": "Je reçois suffisamment de reconnaissance pour mon travail.",
                "scale": "0-10",
                "required": true
              },
              {
                "id": "Q30",
                "type": "scale",
                "text": "Mon manager me fait confiance et me laisse de l'autonomie.",
                "scale": "0-10",
                "required": true
              },
              {
                "id": "Q31",
                "type": "scale",
                "text": "La communication interne est transparente et régulière.",
                "scale": "0-10",
                "required": true
              },
              {
                "id": "Q32",
                "type": "scale",
                "text": "J'ai des opportunités de développement professionnel (formation, évolution).",
