  "calculation_engine": {
    "module1_scoring": {
      "method": "sphere_average",
      "formula": "(Moyenne_Items / 10) × 100",
      "normalization": "0-100",
      "negative_valence_questions": ["Q9"],
      "thresholds": {
        "red": { "max": 40, "label": "Zone rouge - Priorité critique" },
        "orange": { "max": 65, "label": "Zone orange - Attention requise" },
        "green": { "max": 80, "label": "Zone verte - Satisfaisant" },
        "gold": { "min": 80, "label": "Excellence" }
      }
    },
    "criticality_index": {
      "formula": "(100 - Score_Sphère) × (% priorité) / 100",
      "description": "Plus l'indice est élevé, plus l'action est urgente"
    },
    "module2_scoring": {
      "method": "dimension_average",
      "formula": "((Moyenne_2_Items - 1) / 4) × 100",
      "scale": "1-5",
      "normalization": "0-100"
    },
    "module3_presenteeism": {
      "rate_formula": "(Σ jours présentéisme) / (Effectif × Jours_Travaillés)",
      "productivity_loss_formula": "1 - (Efficacité_Moyenne / 10)",
      "cost_formula": "Effectif × Salaire_Chargé × Taux_Présentéisme × Coefficient_Perte",
      "roi_estimate": "Coût × 0.5"
    },
    "module3_distress": {
      "criteria": "Q66 >= 7/10 OU Q67 >= 4/5",
      "thresholds": {
        "green": { "max": 15, "label": "Normal" },
        "yellow": { "max": 25, "label": "Surveillance" },
        "orange": { "max": 40, "label": "Alerte" },
        "red": { "min": 40, "label": "Crise" }
      }
    },
    "confidentiality": {
      "module1_threshold": 5,
      "module2_threshold": 5,
      "module3_threshold": 30,
      "subgroup_threshold": 15,
      "aggregation_policy": "Si N < seuil, agrégation au niveau supérieur"
    }
  },

