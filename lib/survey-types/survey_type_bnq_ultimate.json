        ]
      },
      {
        "id": "MOD_RPS",
        "title": "Pratiques de gestion - Dimensions RPS",
        "activation": "OPT_IN",
        "intro_text": "Les questions suivantes permettent d'approfondir l'analyse des pratiques de gestion selon 8 dimensions clés.\n\nÉvaluez chaque affirmation sur une échelle de 1 à 5:\n- 1 = Pas du tout d'accord\n- 5 = Tout à fait d'accord",
        "sections": [
          {
            "id": "SEC_RPS_DIM",
            "title": "8 Dimensions RPS",
            "questions": [
              { "id": "Q40", "type": "scale", "text": "Ma charge de travail est raisonnable.", "scale": "1-5", "dimension": "charge_travail", "required": true },
              { "id": "Q41", "type": "scale", "text": "J'ai suffisamment de temps pour accomplir mes tâches.", "scale": "1-5", "dimension": "charge_travail", "required": true },
              { "id": "Q42", "type": "scale", "text": "Je comprends clairement ce qu'on attend de moi.", "scale": "1-5", "dimension": "clarte_role", "required": true },
              { "id": "Q43", "type": "scale", "text": "Mes objectifs sont clairement définis.", "scale": "1-5", "dimension": "clarte_role", "required": true },
              { "id": "Q44", "type": "scale", "text": "Mon travail est reconnu à sa juste valeur.", "scale": "1-5", "dimension": "reconnaissance", "required": true },
              { "id": "Q45", "type": "scale", "text": "Je reçois des retours réguliers sur mon travail.", "scale": "1-5", "dimension": "reconnaissance", "required": true },
              { "id": "Q46", "type": "scale", "text": "J'ai la liberté de décider comment faire mon travail.", "scale": "1-5", "dimension": "autonomie", "required": true },
              { "id": "Q47", "type": "scale", "text": "Je peux influencer les décisions qui affectent mon travail.", "scale": "1-5", "dimension": "autonomie", "required": true },
              { "id": "Q48", "type": "scale", "text": "Je peux compter sur mes collègues en cas de difficulté.", "scale": "1-5", "dimension": "soutien_social", "required": true },
              { "id": "Q49", "type": "scale", "text": "Mon manager me soutient quand j'en ai besoin.", "scale": "1-5", "dimension": "soutien_social", "required": true },
              { "id": "Q50", "type": "scale", "text": "Mon travail respecte mon équilibre vie pro/perso.", "scale": "1-5", "dimension": "equilibre", "required": true },
              { "id": "Q51", "type": "scale", "text": "Je ne suis pas sollicité(e) en dehors des heures de travail.", "scale": "1-5", "dimension": "equilibre", "required": true },
